@using PETUtility.Data.Fundamentals.Localizations;
@model PETUtility.Data.Fundamentals.Models.PETiano

@{
    ViewBag.Title = "Login";
}

<div class="titleName">
    <h2>@Localization.Global.Menu.Login</h2>
</div>
<hr />

@if (ViewData[Localization.Global.Error.LoginFail] != null)
{
    <div>
        <p class="erroMessage">@Localization.Global.Error.LoginFail</p>
    </div>
}

<div class="centralize">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control fieldSize" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control fieldSize" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Logar" class="btn btn-default buttonToRight" />
                </div>
            </div>
        </div>
    }

</div>
